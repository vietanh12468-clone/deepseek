<link rel="stylesheet" href="/css/style.css" />

<div class="chat-footer">
  <div class="tags">
    {{#each tags}}
    <div class="tag">{{this}}</div>
    {{/each}}
    <form class="tag file-tag-form" enctype="multipart/form-data" method="post" action="/check-confirm">
      <input type="hidden" name="selectedFile" id="selectedFile" />
      <label class="tag file-tag-label">
        <button type="button" onclick="document.getElementById('fileInput').click();">ðŸ“Ž File</button>
        <input type="file" id="fileInput" name="file" style="display:none;"
          onchange="document.getElementById('selectedFile').value = this.value;" />
      </label>
      <button type="submit" class="submit-btn">Submit</button>
    </form>
  </div>

  <div class="input-area">
    <input type="text" placeholder="{{placeholder}}" />
    <button class="send-btn">âž¤</button>
  </div>

  <form class="extracted-info-form" method="post" action="/confirm">
    <div class="extracted-info">{{extractedText}}</div>
    <input name="chunksLength" value="{{chunks.length}}" />
    <input type="hidden" name="fileName" value="{{file.name}}" />
    <input type="hidden" name="fileSize" value="{{file.size}}" />
    <input type="hidden" name="fileType" value="{{file.type}}" />
    <input type="hidden" name="resolvedPath" value='{{file.path}}' />
</div>
<button type="submit" class="confirm-btn">Confirm</button>
</form>
</div>